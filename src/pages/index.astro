---
import BaseLayout from "../layouts/BaseLayout.astro";
---

<BaseLayout
  title="Emergency Plumber in Austin | ACME Plumbing"
  description="24/7 emergency plumbing services in Austin. Call now for fast, reliable service."
>
  <header class="bg-blue-700 text-white p-8">
    <h1 class="text-4xl font-bold">Emergency Plumber in Austin</h1>
    <p class="mt-2 text-xl">Fast • Licensed • 24/7</p>
    <a href="tel:5125551234"
       class="inline-block mt-4 bg-white text-blue-700 px-6 py-3 font-bold rounded">
      Call Now
    </a>
  </header>

  <main class="p-8 max-w-5xl mx-auto">
    <h2 class="text-2xl font-bold mb-4">Our Services</h2>
    <ul class="grid md:grid-cols-3 gap-6">
      <li>Emergency Plumbing</li>
      <li>Drain Cleaning</li>
      <li>Water Heater Repair</li>
    </ul>
  </main>
  <form name="contact" method="POST" data-netlify="true" class="space-y-4">
  <input type="hidden" name="form-name" value="contact" />
  
  <input name="name" placeholder="Name" required class="border p-2 w-full" />
  <input name="phone" placeholder="Phone" required class="border p-2 w-full" />
  <textarea name="message" placeholder="What’s the issue?" class="border p-2 w-full"></textarea>

  <button class="bg-blue-700 text-white px-6 py-3 font-bold">
    Request Service
  </button>
</form>

</BaseLayout>
